<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".fragment.FormSearchFragment"
    android:orientation="vertical">


    <EditText
        android:id="@+id/edTextSearchMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:hint="@string/hint_search_movie_name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableLeft="@drawable/ic_search_black_30dp" />

    <Button
        android:id="@+id/btnYoutube"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/ripple_btn_youtube"
        android:padding="10dp"
        android:text="@string/text_btn_youtube"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btnNiconico"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/ripple_btn_niconico"
        android:padding="10dp"
        android:text="@string/text_btn_niconico"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_gravity="center" />
</LinearLayout>
